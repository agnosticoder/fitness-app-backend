generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Exercise {
  id       String    @id @default(uuid())
  name     String
  reps     Int       @default(0)
  setOrder Int       @default(0)
  weight   Int       @default(0)
  isDone   Boolean   @default(false)
  workouts Workout[] @relation(name: "workout", references: [id])
}

model Workout {
  id        String     @id @default(uuid())
  name      String
  exercises Exercise[] @relation(name: "workout")
}

